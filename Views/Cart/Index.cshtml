@model List<Ecommerce.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h2 class="my-3">Your Cart</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@((item.Product?.Name) ?? "Unknown Product")</h5>
                    <p class="card-text">Quantity: <strong>@item.Quantity</strong></p>
                    <p class="card-text text-muted">Price: Rs.@item.Product?.Price</p>
                    <!-- Optional remove or edit button -->
                    <!-- <a href="#" class="btn btn-sm btn-danger">Remove</a> -->
                </div>
            </div>
        </div>
    }
</div>
